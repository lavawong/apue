{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Launch",
      "type": "lldb",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopOnEntry": false,
      "cwd": "${config:cmake.buildDirectory}",
      "environment": [
        {
          // add the directory where our target was built to the PATHs
          // it gets resolved by CMake Tools:
          "name": "PATH",
          "value": "$PATH:${command:cmake.launchTargetDirectory}"
        }
      ],
      "subProcess": true, // Enable sub process debug
      "externalConsole": false,
      "logging": {
        "moduleLoad": true,
        "programOutput": true,
        "trace": false
      },
      "MIModel": "lldb",
      "osx": {
        "program": "${command:cmake.launchTargetPath}",
        "targetArchitecture": "arm64"
        // "miDebuggerPath": "${HOME}/.vscode/extensions/ms-vscode.cpptools-1.8.4/debugAdapters/lldb-mi/bin/lldb-mi"
      },
      "stopAtEntry": false,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for lldb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Enable debug child process",
          "text": "-gdb-set follow-fork-mode child"
        }
      ]
    }
  ]
}
